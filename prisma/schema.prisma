generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Course {
  id          String   @id @default(uuid())
  name        String @unique
  description String?
  workload    Int
  price       Int?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model User {
  id            String   @id @default(uuid())
  name          String
  phone         String
  email         String   @unique
  password      String
  cpf           String   @unique
  address       String
  date_of_birth DateTime
  role          UserRole @default(ALUNO)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

enum UserRole {
  ADMIN
  ALUNO
  PROFESSOR
}
